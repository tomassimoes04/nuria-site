---
interface Props {
  name: string;
  tagline: string;
  bio: string;
  profileImage: string;
}

const { name, tagline, bio, profileImage } = Astro.props;
---

<header class="text-center py-12 px-4">
  <div class="relative inline-block mb-6">
    <div class="w-32 h-32 rounded-full overflow-hidden ring-4 ring-white shadow-xl mx-auto">
      <img 
        src={profileImage} 
        alt={name}
        class="w-full h-full object-cover"
        onerror="this.style.display='none'; this.parentElement.classList.add('bg-gradient-to-br', 'from-rose-400', 'to-purple-500', 'flex', 'items-center', 'justify-center'); this.parentElement.innerHTML=`<span class='text-4xl text-white font-bold'>${name.charAt(0)}</span>`"
      />
    </div>
    <div class="absolute -bottom-2 -right-2 bg-green-500 w-8 h-8 rounded-full border-4 border-white flex items-center justify-center">
      <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
    </div>
  </div>
  
  <h1 class="text-3xl font-bold text-gray-900 mb-1">{name}</h1>
  <p class="text-rose-600 font-medium mb-4">{tagline}</p>
  <p class="text-gray-600 max-w-md mx-auto leading-relaxed">{bio}</p>
</header>
