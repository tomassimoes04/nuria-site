    </div>
  </main>
  
  <!-- Footer -->
  <footer class="text-center py-8 text-sm text-gray-400">
    <p>Â© {new Date().getFullYear()} {profileData.name}. Made with â¤ï¸</p>
  </footer>
</BaseLayout>

<script>
  // Pokemon filter functionality
  const filterButtons = document.querySelectorAll('.pokemon-filter');
  const pokemonItems = document.querySelectorAll('.pokemon-item');

  filterButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = btn.getAttribute('data-filter');
      
      // Update button styles
      filterButtons.forEach(b => {
        b.classList.remove('bg-gray-900', 'text-white', 'active');
        b.classList.add('bg-gray-100', 'text-gray-600');
      });
      btn.classList.remove('bg-gray-100', 'text-gray-600');
      btn.classList.add('bg-gray-900', 'text-white', 'active');
      
      // Filter items
      pokemonItems.forEach(item => {
        const status = item.getAttribute('data-status');
        if (filter === 'all' || status === filter) {
          item.classList.remove('hidden');
        } else {
          item.classList.add('hidden');
        }
      });
    });
  });
</script>
